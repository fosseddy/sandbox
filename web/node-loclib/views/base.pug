doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet")

        link(rel="stylesheet", href="/style.css")

        title Local Library

    body
        block body
            div.layout.container
                nav
                    ul.nav__links
                        li: a(href="/catalog") Home
                        li: a(href="#") All books
                        li: a(href="/catalog/author") All authors
                        li: a(href="/catalog/genre") All genres

                    hr

                    ul.nav__actions
                        li: a(href="/catalog/genre/create") Create new genre
                        li: a(href="/catalog/author/create") Create new author
                        li: a(href="#") Create new book

                    hr

                    if user
                        ul.nav__user
                            li User:
                            li= user.username
                            li: a(href="/logout") Logout

                main
                    block content
